@code {

    [Parameter] public string? Title { get; set; } = "Edit";

    [Parameter] public string? ModalId { get; set; } = "modal-form";

    [Parameter] public int ModalClass { get; set; } = 0;
    [Parameter] public bool HideSaveButton { get; set; } = false;
    [Parameter] public string? SaveTitle { get; set; } = "Save Change"; 
    [Parameter] public string? CancelTitle { get; set; } = "Cancel"; 
    [Parameter] public bool Backdrop { get; set; } = false;
    [Parameter] public bool NoFooter { get; set; } = false;
    [Parameter] public string? AddClass { get; set; } = "";
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? FootLeftContent { get; set; }
    [Parameter] public RenderFragment? FootRightContent { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnClickCallback { get; set; }

    private string GetModalClass()
    {
        switch (ModalClass)
        {
            case 1:
                return "modal-fullscreen";
            case 2:
                return "modal-lg";
            case 3:
                return "modal-xl";
        }

        return "";
    }

}