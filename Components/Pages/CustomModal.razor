@if (Backdrop)
{
    <div class="modal fade @(ModalClass == 1 ? "bg-white" : "")" tabindex="-1" id="@ModalId" data-bs-backdrop="static">
        <div class="modal-dialog @AddClass @GetModalClass()">
            <div class="modal-content @(ModalClass == 1 ? "shadow-none" : "")">
                <div class="modal-header py-7 d-flex justify-content-between">
                    <h5 class="modal-title">@(Title ?? "Edit")</h5>
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal"
                         aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1"
                                  transform="rotate(-45 6 17.3137)" fill="currentColor"></rect>
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)"
                                  fill="currentColor"></rect>
                        </svg>
                    </div>
                </div>
                <div class="modal-body">
                    @if (Title == "Delete")
                    {
                        <div class="alert alert-warning d-flex align-items-center p-5 mb-10">
                        <span class="svg-icon svg-icon-2hx svg-icon-danger me-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none">
                                <path opacity="0.3"
                                      d="M20.5543 4.37824L12.1798 2.02473C12.0626 1.99176 11.9376 1.99176 11.8203 2.02473L3.44572 4.37824C3.18118 4.45258 3 4.6807 3 4.93945V13.569C3 14.6914 3.48509 15.8404 4.4417 16.984C5.17231 17.8575 6.18314 18.7345 7.446 19.5909C9.56752 21.0295 11.6566 21.912 11.7445 21.9488C11.8258 21.9829 11.9129 22 12.0001 22C12.0872 22 12.1744 21.983 12.2557 21.9488C12.3435 21.912 14.4326 21.0295 16.5541 19.5909C17.8169 18.7345 18.8277 17.8575 19.5584 16.984C20.515 15.8404 21 14.6914 21 13.569V4.93945C21 4.6807 20.8189 4.45258 20.5543 4.37824Z"
                                      fill="black"></path>
                                <path
                                    d="M10.5606 11.3042L9.57283 10.3018C9.28174 10.0065 8.80522 10.0065 8.51412 10.3018C8.22897 10.5912 8.22897 11.0559 8.51412 11.3452L10.4182 13.2773C10.8099 13.6747 11.451 13.6747 11.8427 13.2773L15.4859 9.58051C15.771 9.29117 15.771 8.82648 15.4859 8.53714C15.1948 8.24176 14.7183 8.24176 14.4272 8.53714L11.7002 11.3042C11.3869 11.6221 10.874 11.6221 10.5606 11.3042Z"
                                    fill="black"></path>
                            </svg>
                        </span>
                            <div class="d-flex flex-column">
                                <h4 class="mb-1 text-danger">Do you want to delete this item?</h4>
                            </div>
                        </div>
                    }
                    @ChildContent
                </div>
                @if (FootLeftContent != null)
                {
                    <div class="modal-footer justify-content-between">
                        <div class="d-flex justify-content-start">
                            @FootLeftContent
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-secondary mx-5" data-bs-dismiss="modal">@CancelTitle</button>
                            @if (!HideSaveButton)
                            {
                                <button type="button" class="btn @(Title == "Delete" ? "btn-danger" : "btn-primary")"
                                        @onclick="OnClickCallback">@(Title == "Delete" ? "Deleted" : $"{SaveTitle}")</button>
                            }
                            @FootRightContent
                        </div>
                    </div>
                }
                else if(!NoFooter)
                {
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@CancelTitle</button>
                        @if (!HideSaveButton)
                        {
                            <button type="button" class="btn @(Title == "Delete" ? "btn-danger" : "btn-primary")"
                                    @onclick="OnClickCallback">@(Title == "Delete" ? "Deleted" : $"{SaveTitle}")</button>
                        }
                        @FootRightContent
                    </div>
                }
            </div>
        </div>
    </div>
}
