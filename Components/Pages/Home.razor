    class="bg-white"
    data-kt-drawer="true"
    data-kt-drawer-activate="true"
    data-kt-drawer-name="docs"
    data-kt-drawer-overlay="true"
    data-kt-drawer-width="{default:'300px', 'md': '400px'}"
    data-kt-drawer-direction="end"
    data-kt-drawer-close="#kt_package_tour_close"
